---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Electric cars">
	<header class="py-4 px-8 flex items-center fixed w-full top-0 justify-between z-40 text-white">
		<div class="flex flex-grow basis-0">
			<svg class="h-6 w-32" viewBox="0 0 342 35" xmlns="http://www.w3.org/2000/svg"><path d="M0 .1a9.7 9.7 0 0 0 7 7h11l.5.1v27.6h6.8V7.3L26 7h11a9.8 9.8 0 0 0 7-7H0zm238.6 0h-6.8v34.8H263a9.7 9.7 0 0 0 6-6.8h-30.3V0zm-52.3 6.8c3.6-1 6.6-3.8 7.4-6.9l-38.1.1v20.6h31.1v7.2h-24.4a13.6 13.6 0 0 0-8.7 7h39.9v-21h-31.2v-7h24zm116.2 28h6.7v-14h24.6v14h6.7v-21h-38zM85.3 7h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 13.8h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 14.1h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zM308.5 7h26a9.6 9.6 0 0 0 7-7h-40a9.6 9.6 0 0 0 7 7z" fill="currentColor"></path></svg>
		</div>
		<nav>
			<ul class="flex text-sm [&>li>a]:text-white [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2">
				<li><a href="#">Model S</a></li>
				<li><a href="#">Model 3</a></li>
				<li><a href="#">Model X</a></li>
				<li><a href="#">Model Y</a></li>
				<li><a href="#">Solar Roof</a></li>
				<li><a href="#">Powerwall</a></li>
			</ul>
		</nav>

		<nav class="flex flex-grow basis-0 justify-end">
			<ul class="flex text-sm [&>li>a]:text-white [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2">
				<li><a href="#">Shop</a></li>
				<li><a href="#">Account</a></li>
				<li><a href="#">Menu</a></li>
			</ul>
		</nav>

	</header>

	<section class="bg-black h-screen w-screen relative text-center overflow-hidden text-white">
		<div class="z-20 relative flex flex-col justify-around h-full w-full">
			<header>
				<h2 class="text-[40px] font-medium">Experience Tesla</h2>
				<p class="text-sm">Schedule a Demo Drive Today</p>
			</header>
			<footer>
				<a class="font-medium border-2 rounded px-" href="#">Demo Drive</a>
			</footer>
		</div>

		<div class="absolute top-0 bottom-0 z-10 h-full w-full" >
			<video class="object-cover h-full w-full" src="/video.webm" autoplay muted loop></video>
		</div>
	</section>
</Layout>
